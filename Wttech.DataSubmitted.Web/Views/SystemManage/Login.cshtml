@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    
    <meta name="viewport" content="width=device-width" />
    <title>登录页</title>
    <link href="~/Content/CSS/login/login.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#login_btn").click(function () {
                var userName = $("#userName").val();
                var password = $("#password").val();

                $.ajax({
                    type: 'POST',
                    dataType: 'json',
                    url: "/SystemManage/Login",
                    data: {
                        "userName": userName,
                        "password": password
                    },
                    success: function (data) {
                        if (data == 5) {
                            window.location = "/Home/Index";
                        }
                        else if (data == 0) {
                           // alert("请输入用户名!");
                            $("#validTip").text("请输入用户名!");
                            $("#password").attr("value", "");
                            $("#userName").focus();
                            return;
                        }
                        else if (data == 1) {
                           // alert("请输入密码!");
                            $("#validTip").text("请输入密码!");
                            $("#password").focus();
                            return;
                        }
                        else if (data == 2) {
                           // alert("用户名不存在!");
                            $("#validTip").text("用户名不存在!");
                            $("#userName").attr("value", "");
                            $("#password").attr("value", "");
                            return;
                        }
                        else if (data == 4) {
                         //  alert("该用户已删除!");
                            $("#validTip").text("该用户已删除!");
                            $("#userName").attr("value", "");
                            $("#password").attr("value", "");
                            $("#userName").focus();
                            return;
                        }
                        else {  // if (data = 3)
                            $("#validTip").text("用户名和密码不匹配!");
                            $("#userName").attr("value", "");
                            $("#password").attr("value", "");
                            $("#userName").focus();
                            return;
                        }
                    },
                    error: function (data) {
                        alert("网络连接失败！");
                        $("#userName").attr("value", "");
                        $("#password").attr("value", "");
                        $("#userName").focus();
                    }
                });
            });
        });
        function keyLogin() {
            if (window.event.keyCode == 13) {
                if (window.event.srcElement.id == "password") {
                    $("#login_btn").click();
                }
                else {
                    window.event.keyCode = 9;
                }
            }

        }
    </script>
</head>
<body onkeydown="keyLogin()">
    
    <div class="login_bg">
        
        <div class="system_title">
            <span class="login_logo"></span>
            <span class="title">华北高速数据报送系统</span>
        </div>
        <div class="login_window">
            <div class="login_title">
                <span>系统登录</span>
            </div>
            <form action="" id="login" method="post" style="float:left;width:100%;height:100%;">
                <table class="login">
                    <tr><td>登录名：</td></tr>
                    <tr><td><input name="" type="text" class="txt" maxlength="32" id="userName" /></td></tr>
                    <tr><td>密码：</td></tr>
                    <tr><td><input name="" type="password" class="txt" maxlength="32" id="password" /></td></tr>
                    <tr>
                        <td><div id="validTip"></div></td>
                    </tr>
                    <tr style="width:300px; height:38px;">
                        <td style="width:300px; height:38px;">
                            <div id="login_btn" class="login_btn">登&nbsp;&nbsp;&nbsp;&nbsp;录</div>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
    <div class="login_bg_img_div">
        <img class="login_bg_img" src="~/Content/images/login/login_bg.png">
    </div>
</body>
</html>
